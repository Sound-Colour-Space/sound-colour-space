<div class="row">
    <div class="entry detail large-12 medium-12 small-12 column text-center">
        <h5>{title}</h5>
        <h6>{year}</h6>
        <h6>{author.first_name} {author.last_name} {?author.pseudonym}({author.pseudonym}){/author.pseudonym}</h6>
        {?tags}<h6>Tags:{#tags} <a href="/q={.}">{.}</a>{@sep},{/sep}{/tags}</h6>{/tags}
        <img src="{image}"/>
    </div>
</div>
